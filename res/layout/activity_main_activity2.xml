<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.money2.MainActivity2" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true" >

        <LinearLayout
            android:id="@+id/top"
            android:layout_width="fill_parent"
            android:layout_height="75dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <ImageButton
                    android:id="@+id/imageButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/add" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="70dp"
                    android:src="@drawable/minus" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/middle"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="146dp" >

                <TextView
                    android:id="@+id/date"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:text="日期"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/date2"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_toRightOf="@id/date"
                    android:ems="10"
                    android:inputType="date"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/dollar"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_below="@id/date"
                    android:text="$"
                    android:textSize="24sp" />

                <EditText
                    android:id="@+id/dollar2"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@id/date2"
                    android:layout_toRightOf="@id/dollar"
                    android:ems="10"
                    android:inputType="number"
                    android:singleLine="true"/>

                <TextView
                    android:id="@+id/detail"
                    android:layout_width="90dp"
                    android:layout_height="45dp"
                    android:layout_below="@id/dollar"
                    android:text="花費"
                    android:textSize="24sp"
                    android:singleLine="true"/>

                <EditText
                    android:id="@+id/detail2"
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:layout_below="@id/dollar2"
                    android:layout_toRightOf="@id/detail"
                    android:ems="10" >

                    <requestFocus />
                </EditText>

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bottom"
            android:layout_width="fill_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:layout_below="@id/middle"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent" >

                <Button
                    android:id="@+id/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="false"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/clear"
                    android:text="取消" />


                <Button
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="false"
                    android:layout_centerHorizontal="true"
                    android:layout_toLeftOf="@+id/enter"
                    android:text="清空" />

                <Button
                    android:id="@+id/enter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="false"
                    android:text="送出" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>